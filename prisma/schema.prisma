generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum colors {
  white
  white_gray
  gray
  gray_black
  yellow_white
  yellow
  yellow_black
  orange_white
  orange
  orange_black
  green_white
  green
  green_black
  blue
  purple
  brown
  black
  red
}

model admin {
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String
}

model announcement {
  id String @id
  title String
  text String?
  date DateTime?
}

model user {
  id String @id @default(uuid())
  cpf String @unique
  name String
  email String @unique
  password String

  classes classes[]
  @@map("tb_user")
}

model students {
  id String @id @default(uuid())
  cpf String @unique
  nickname String
  full_name String
  ifce_registration String @unique
  phone_number String?
  guardian_number String?
  birthday DateTime
  goal_frequency Int
  belt_id String

  belt belt @relation(fields: [belt_id], references: [id])
  classes classes[]
}

model belt {
  id String @id
  color colors
  rate Int @default(0)

  students students[]
}

model frequency {
  student_id String
  class_id String
  date DateTime @default(now())

  @@id([student_id,class_id])
}

model classes {
  id String @id @default(uuid())
  name String @unique

  teacher_id String @default("no-teacher")

  user user @relation(fields: [teacher_id], references: [id], onDelete: SetDefault)
  students students[]
}