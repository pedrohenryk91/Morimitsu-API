generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum roles {
  admin
  instructor
}

enum colors {
  white
  white_gray
  gray
  gray_black
  yellow_white
  yellow
  yellow_black
  orange_white
  orange
  orange_black
  green_white
  green
  green_black
  blue
  purple
  brown
  black
  red
}

model announcement {
  id String @id
  title String
  text String?
  date DateTime?
}

model user {
  id String @id @default(uuid())
  cpf String @unique
  name String
  email String @unique
  password String
  phone_number String?
  role roles @default(instructor)
  belt_id String

  belt belt @relation(fields: [belt_id], references: [id])
  @@map("tb_user")
}

model student {
  id String @id @default(uuid())
  cpf String @unique
  nickname String
  full_name String
  ifce_registration String @unique
  phone_number String?
  guardian_number String?
  birthday DateTime
  goal_frequency Int
  belt_id String

  belt belt @relation(fields: [belt_id], references: [id])

  frequency frequency[]
  class classes[]
}

model belt {
  id String @id
  color colors
  rate Int @default(0)

  user user[]
  students student[]
}

model frequency {
  student_id String
  meeting_id String
  date DateTime @default(now())

  student student @relation(fields: [student_id],references: [id])
  meeting meeting @relation(fields: [meeting_id],references: [id])

  @@id([student_id,meeting_id])
}

model meeting {
  id String @id @default(uuid())
  name String
  description String?
  date DateTime @default(now())
  class_id String @default("no-class")

  class classes @relation(fields: [class_id],references: [id],onDelete: SetDefault)
  frequency frequency[]
}

model classes {
  id String @id @default(uuid())
  name String @unique

  students student[]
  meeting meeting[]
}