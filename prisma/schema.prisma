generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum gender {
  man
  woman
}

enum roles {
  admin
  instructor
}

enum classtype {
  kids
  normal
  mista
}

enum colors {
  white
  white_gray
  gray
  gray_black
  yellow_white
  yellow
  yellow_black
  orange_white
  orange
  orange_black
  green_white
  green
  green_black
  blue
  purple
  brown
  black
  red
}

model report {
  id String @id
  title String
  text String?
  date DateTime?
  to roles
}

model user {
  id String @id @default(uuid())
  cpf String @unique
  name String
  email String @unique
  password String
  phone_number String?
  role roles @default(instructor)
  belt_id String

  belt belt @relation(fields: [belt_id], references: [id])
  classes classes[]
  @@map("tb_user")
}

model student {
  id String @id @default(uuid())
  cpf String @unique
  age Int @default(15)
  gender gender
  nickname String
  full_name String
  guardian_name String
  phone_number String?
  guardian_number String?
  birthday DateTime
  current_fq Int @default(0)
  belt_id String
  is_monitor Boolean @default(false)

  belt belt @relation(fields: [belt_id], references: [id])

  frequency frequency[]
  class classes[]
}

model belt {
  id String @id
  color colors
  rate Int @default(0)
  rq_frequency Int @default(15)

  user user[]
  students student[]
}

model frequency {
  id String @id @default(uuid())
  student_cpf String
  student_id String?
  class_id String
  date DateTime @default(now())

  student student? @relation(fields: [student_id],references: [id], onDelete: SetNull)
  class classes @relation(fields: [class_id],references: [id])
}

model classes {
  id String @id @default(uuid())
  name String @unique
  instructor_id String?
  type classtype @default(mista)
  rq_fq Int? //Required Frequency

  user user? @relation(references: [id], fields: [instructor_id])
  students student[]
  frequency frequency[]
}